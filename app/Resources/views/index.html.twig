{% extends 'base.html.twig' %}

{% block body %}

    <div class="col col-md-4 col-md-offset-5">
        <h2>Saisir votre recherche</h2>
            <form method="post" action="{{ path('search_room_dispo') }}" onsubmit="javascript:verif()">

                <div class="form-group">
                    <label>Date de début</label>
                    <input class="form-control" type="date" name="startDate" id="startDate" required>
                    <label>Date de fin</label>
                    <input class="form-control" type="date" name="endDate" id="endDate" required>
                    <label>Nombre de personnes</label>
                    <input class="form-control" type="number" name="nbPersons" id="nbPersons" required>
                    <button type="submit" class="btn btn-primary ">Valider</button>

                </div>

            </form>

    </div>

{% endblock %}
{% block javascripts %}
   {{ parent() }}
    <script>
       function verif() {

           var debut = new Date(document.getElementById('startDate').value);
           var fin = new Date(document.getElementById('endDate').value);
           if(fin<debut) {
               console.log(debut);
               alert('La date de Début doit être inférieur à la date de Fin');
           }
       }
    </script>
{% endblock %}